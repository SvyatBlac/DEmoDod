<Window x:Class="WpfApp1.MaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Материалы" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding}" Margin="0,10">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#ABCFCE" 
                            Margin="10" 
                            Padding="15"
                            CornerRadius="0"
                            BorderThickness="1"
                            BorderBrush="Gray">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Левая часть -->
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Type}" 
                                               FontWeight="Bold"
                                               FontSize="14"/>
                                    <TextBlock Text=" | " 
                                               Margin="5,0"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="14"/>
                                </StackPanel>

                                <TextBlock Margin="0,0,0,5">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Минимальное количество: {0} {1}">
                                            <Binding Path="MinQuantity"/>
                                            <Binding Path="Unit"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Margin="0,0,0,5">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="На складе: {0} {1}">
                                            <Binding Path="StockQuantity"/>
                                            <Binding Path="Unit"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding Price, StringFormat='Цена: {0:F2} р'}" 
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Unit, StringFormat='/ {0}'}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Правая часть -->
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding MinOrderCost, StringFormat='Стоимость партии: {0:F2} р'}"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="20,0,0,0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>
